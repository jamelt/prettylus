{
  "name": "prettylus",
  "displayName": "Prettylus",
  "description": "Seamlessly format Vue SFCs that use Stylus.",
  "version": "0.3.2",
  "publisher": "ekqnp",
  "license": "MIT",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "vue",
    "prettier",
    "stylus",
    "css",
    "sfc",
    "typescript",
    "pug"
  ],
  "homepage": "https://github.com/qnp/prettylus",
  "repository": {
    "type": "git",
    "url": "https://github.com/qnp/prettylus.git"
  },
  "bugs": "https://github.com/qnp/prettylus/issues",
  "icon": "prettylus.png",
  "galleryBanner": {
    "color": "#EB3C3C",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:vue"
  ],
  "main": "./out/main.js",
  "contributes": {
    "configuration": {
      "title": "prettylus",
      "properties": {
        "prettylus.stylusSupremacyConfigFileName": {
          "description": "Name of the config file to be used by Stylus Supremacy.",
          "type": "string",
          "default": ".stylusrc"
        },
        "prettylus.prettierBaseDirectory": {
          "description": "Base directory path (relative to workspace root or absolute) where Prettier should resolve its configuration and plugins. If not set, Prettier will resolve from the file being formatted.",
          "type": "string",
          "default": null
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "rm -rf ./out && npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --external:stylus-supremacy --external:prettier --external:@prettier/plugin-pug --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "package": "vsce package",
    "install": "npm run package && node scripts/install-vsix.js",
    "release": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "glob": "^11.0.3",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prettier/plugin-pug": "^3.4.2",
    "lru-cache": "^11.2.2",
    "prettier": "^3.6.2",
    "stylus-supremacy": "^4.0.0"
  }
}
